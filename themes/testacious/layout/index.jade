mixin link(post)
	- var attrs = { 'data-link-to': url_for(post.path) }
	if post.img
		- attrs.style = { 'background-image': 'url(' + url_for(post.img) + ')' }
	div.post-list-item&attributes(attrs)
		h2: a(href=url_for(post.path)) #{post.title}

nav.post-list
	each post in page.posts.toArray()
		+link(post)
